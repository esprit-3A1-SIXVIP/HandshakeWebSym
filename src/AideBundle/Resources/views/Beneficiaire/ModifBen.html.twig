{%  extends 'base.html.twig' %}
{%  block container %}
    <div id="contact">
        <div class="container">
            <div class="section-title">
                <h1>Ajouter Beneficiaire</h1>
            </div>
                <a class="btn btn-outline-primary btn-rounded waves-effect waves-light" href="{{ path('affBenC') }}">Afficher</a>

            <div class="row">
                <div class="col-md-10 offset-md-1">
                    <div class="contact-form">
                        {{ form_start(edit_form,{'attr':{'class':'contact-form','id':'contact-form'}}) }}
                        <div class="row">
                            <div class="form-group col-md-6">
                                {{ form_widget(edit_form.aide,{'attr':{'class':'form-control'}}) }}
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_widget(edit_form.nombeneficiaire,{'attr':{'class':'form-control','placeholder':'Nom Beneficiaire'}}) }}
                            </div>
                            <div class="form-group col-md-6">
                            {{ form_widget(edit_form.prenombeneficiaire,{'attr':{'class':'form-control','placeholder':'Prenom Beneficiaire'}}) }}
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_widget(edit_form.email,{'attr':{'class':'form-control','placeholder':'Email'}}) }}
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_widget(edit_form.datenaissance) }}
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_widget(edit_form.ville,{'attr':{'class':'form-control','placeholder':'Ville'}}) }}
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_widget(edit_form.telephone,{'attr':{'class':'form-control','placeholder':'Tel'}}) }}
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_widget(edit_form.ville,{'attr':{'class':'form-control','placeholder':'Ville'}}) }}
                                {{ form_widget(edit_form.telephone,{'attr':{'class':'form-control','placeholder':'Tel'}}) }}
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_widget(edit_form.adressegps,{'attr':{'class':'form-control','placeholder':'Adress Gps'}}) }}
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_widget(edit_form.role,{'attr':{'class':'form-control','placeholder':'role'}}) }}
                            </div>
                            <div class="form-group col-md-6">
                                <input type="text" class="form-control"   name="nom" id="nom" required  />
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Modifier</button>
                        </div>
                        {{ form_end(edit_form) }}
                    </div>
                </div>
            </div>
        </div>
    </div><!--/#Contact-->
{% endblock %}