            <tr>
                <th>Datedebutrefuge</th>
                <td>{% if don.datedebutrefuge %}{{ don.datedebutrefuge|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefinrefuge</th>
                <td>{% if don.datefinrefuge %}{{ don.datefinrefuge|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('don_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('don_edit', { 'donid': don.donid }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
