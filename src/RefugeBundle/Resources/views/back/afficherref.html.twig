{% extends 'back.html.twig' %}
{% block container %}
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box">
                <h4 class="header-title">Custom Toolbar</h4>
                <p class="sub-header">
                    Example of custom toolbar.
                </p>

                <button id="demo-delete-row" class="btn btn-danger btn-sm" disabled><i class="mdi mdi-close mr-1"></i>Delete</button>
                <table id="demo-custom-toolbar"  data-toggle="table"
                       data-toolbar="#demo-delete-row"
                       data-search="true"
                       data-show-refresh="true"
                       data-show-columns="true"
                       data-sort-name="id"
                       data-page-list="[5, 10, 20]"
                       data-page-size="5"
                       data-pagination="true" data-show-pagination-switch="true" class="table-borderless">
                    <thead class="thead-light">
                    <tr>
                        <th>Beneficiaireid</th>
                        <th>Aideid</th>
                        <th>Nombeneficiaire</th>
                        <th>Prenombeneficiaire</th>
                        <th>Email</th>
                        <th>Datenaissance</th>
                        <th>Ville</th>
                        <th>Telephone</th>
                        <th>Adressegps</th>
                        <th>Role</th>
                        <th>Besoin</th>
                        <th>Nationalite</th>
                        <th>Actions</th>
                        <th data-field="state" data-checkbox="true"></th>
                        <th data-field="id" data-sortable="true" data-formatter="invoiceFormatter"> ID</th>
                        <th data-field="name" data-sortable="true">Username</th>
                        <th data-field="name" data-sortable="true">Nom</th>
                        <th data-field="name" data-sortable="true">Prenom</th>
                        <th data-field="name" data-sortable="true">email</th>
                        <th data-field="date" data-sortable="true" data-formatter="dateFormatter">Date de naissance</th>
                        <th data-field="name" data-sortable="true">ville</th>
                        <th data-field="name" data-sortable="true">Telephone</th>
                        <th data-field="name" data-sortable="true">Adressegps</th>
                        <th data-field="name" data-sortable="true">Role</th>
                        <th data-field="name" data-sortable="true">Besoin</th>
                        <th data-field="amount" data-align="center" data-sortable="true" data-sorter="priceSorter">Actions</th>
                        <th data-field="status" data-align="center" data-sortable="true" data-formatter="statusFormatter">Status</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for beneficiaire in beneficiaires %}
                        <tr>
                            <td><a href="{{ path('beneficiaire_show', { 'beneficiaireid': beneficiaire.beneficiaireid }) }}">{{ beneficiaire.beneficiaireid }}</a></td>
                            <td>{{ beneficiaire.userid }}</td>
                            <td>{{ beneficiaire.nombeneficiaire }}</td>
                            <td>{{ beneficiaire.prenombeneficiaire }}</td>
                            <td>{{ beneficiaire.email }}</td>
                            <td>{% if beneficiaire.datenaissance %}{{ beneficiaire.datenaissance|date('Y-m-d') }}{% endif %}</td>
                            <td>{{ beneficiaire.ville }}</td>
                            <td>{{ beneficiaire.telephone }}</td>
                            <td>{{ beneficiaire.adressegps }}</td>
                            <td>{{ beneficiaire.role }}</td>
                            <td>{{ beneficiaire.besoin }}</td>
                            <td>{{ beneficiaire.nationalite }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('beneficiaire_show', {'beneficiaireid': beneficiaire.beneficiaireid }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('beneficiaire_edit', {'beneficiaireid': beneficiaire.beneficiaireid }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div> <!-- end card-box-->
        </div> <!-- end col-->
    </div>
{% endblock %}
